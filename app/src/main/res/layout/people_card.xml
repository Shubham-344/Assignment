<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#b5b894">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"

                >

                <ImageView
                    android:id="@+id/profilephoto"
                    android:layout_width="170dp"
                    android:layout_height="170dp"

                    android:src="@drawable/baseline_person_24"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="220dp"
                android:layout_height="170dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Shrikant Tiwari"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginTop="10dp"
                    android:textColor="#596334"
                    />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:id="@+id/city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Banglore"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-thin"
                                android:layout_marginHorizontal="3dp"
                                android:textColor="#596334"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textAlignment="center"
                                android:textColor="#596334"/>
                            <TextView
                                android:id="@+id/occupation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Student"
                                android:fontFamily="sans-serif-thin"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="3dp"
                                android:textColor="#596334"/>

                        </LinearLayout>

                <TextView
                    android:id="@+id/range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Within 200-400 m"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="#596334"
                    />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="3"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/attr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="coffee"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:textColor="#596334"/>

                    <TextView
                        android:id="@+id/attr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Bussiness"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:textColor="#596334"/>
                    <TextView
                        android:id="@+id/attr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Friendship"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:textColor="#596334"/>


                </GridLayout>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Hi Community! I am open to new connections."
                    android:layout_margin="12dp"
                    android:textSize="12dp"
                    android:textColor="#596334"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#111" android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#596334">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_person_24"
                        android:layout_gravity="center
"                       android:background="#596334"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#B4B4B1">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_add_24"
                        android:background="#B4B4B1"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>